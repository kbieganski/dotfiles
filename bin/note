#!/bin/env bash

if [ $# -gt 0 ]; then
    echo "Invalid arguments"
    exit 1
fi

notes_dir="$HOME/notes"
mkdir -p "$notes_dir"
note="$notes_dir/$(
    fzf --bind "start:reload:fd '.*\\.md' --base-directory '$notes_dir' | sed 's/.md$//'" \
        --bind "enter:accept" \
        --bind "alt-enter:print-query+abort" \
        --preview "bat $notes_dir/$(echo {}).md --color=always"
).md"

if [ "$1" == "--print" ]; then
    echo "$note"
else
    nvim "$note"
fi
